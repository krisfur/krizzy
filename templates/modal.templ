package templates

import (
	"krizzy/internal/models"
	"fmt"
)

func closeModal() templ.Attributes {
	return templ.Attributes{"onclick": "document.getElementById('modal-backdrop').classList.add('hidden')"}
}

templ CardModal(card *models.Card, people []models.Person) {
	<div class="p-6" onclick="event.stopPropagation()">
		<div class="flex justify-between items-start mb-4">
			<h2 class="text-xl font-bold text-gray-800">{ card.Title }</h2>
			<button
				class="text-gray-400 hover:text-gray-600"
				{ closeModal()... }
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>

		<!-- Edit Title -->
		<form
			hx-put={ fmt.Sprintf("/cards/%d", card.ID) }
			hx-target="#modal-content"
			hx-swap="innerHTML"
			class="mb-4"
		>
			<label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
			<input
				type="text"
				name="title"
				value={ card.Title }
				class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
			/>
			<label class="block text-sm font-medium text-gray-700 mb-1 mt-3">Description</label>
			<textarea
				name="description"
				rows="3"
				class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
				placeholder="Add a description..."
			>{ card.Description }</textarea>
			<button
				type="submit"
				class="mt-2 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 text-sm"
			>
				Save Changes
			</button>
		</form>

		<!-- Completion Status -->
		if card.CompletedAt != nil {
			<div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
				<div class="flex items-center gap-2 text-green-700">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
					</svg>
					<span class="font-medium">Completed on { card.CompletedAt.Format("January 2, 2006 at 3:04 PM") }</span>
				</div>
			</div>
		}

		<hr class="my-4"/>

		<!-- Assignees -->
		<div id="assignee-picker">
			@AssigneePicker(card.ID, card.Assignees, people)
		</div>

		<hr class="my-4"/>

		<!-- Checklist -->
		<div id="checklist-section">
			@ChecklistComponent(card.ID, card.Checklist)
		</div>

		<hr class="my-4"/>

		<!-- Comments -->
		<div id="comments-section">
			@CommentsList(card.ID, card.Comments)
		</div>

		<hr class="my-4"/>

		<!-- Delete Card -->
		<div class="flex justify-end">
			<button
				class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 text-sm"
				hx-delete={ fmt.Sprintf("/cards/%d", card.ID) }
				hx-target="#board-content"
				hx-swap="innerHTML"
				hx-confirm="Delete this card?"
				onclick="document.getElementById('modal-backdrop').classList.add('hidden')"
			>
				Delete Card
			</button>
		</div>
	</div>
}

templ PeopleModal(people []models.Person) {
	<div class="p-6" onclick="event.stopPropagation()">
		<div class="flex justify-between items-start mb-4">
			<h2 class="text-xl font-bold text-gray-800">Manage People</h2>
			<button
				class="text-gray-400 hover:text-gray-600"
				{ closeModal()... }
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>
		<div id="people-list">
			@PeopleList(people)
		</div>
	</div>
}

templ PeopleList(people []models.Person) {
	<!-- Add Person Form -->
	<form
		hx-post="/people"
		hx-target="#people-list"
		hx-swap="innerHTML"
		hx-on::after-request="this.reset()"
		class="mb-4"
	>
		<div class="flex gap-2">
			<input
				type="text"
				name="name"
				placeholder="Add person..."
				class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
				required
			/>
			<button
				type="submit"
				class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
			>
				Add
			</button>
		</div>
	</form>

	<!-- People List -->
	<div class="space-y-2">
		if len(people) == 0 {
			<p class="text-gray-500 text-sm">No people added yet.</p>
		} else {
			for _, person := range people {
				<div class="flex items-center justify-between p-2 bg-gray-50 rounded">
					<span class="text-gray-800">{ person.Name }</span>
					<button
						class="text-red-500 hover:text-red-700"
						hx-delete={ fmt.Sprintf("/people/%d", person.ID) }
						hx-target="#people-list"
						hx-swap="innerHTML"
						hx-confirm={ fmt.Sprintf("Remove %s?", person.Name) }
					>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
						</svg>
					</button>
				</div>
			}
		}
	</div>
}
